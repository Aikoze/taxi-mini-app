{
  "version": 2,
  "buildCommand": "CI=false npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "ignoreCommand": "echo 'Ignoring build errors'"
}
